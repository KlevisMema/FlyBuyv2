@model FlyBuy.Models.Product

@{
    ViewData["Title"] = "Create";
}

 <div class="account-page account-page-2">
    <div class="container">
        <div class="row row-2">
            <div class="col-2 form-container-2">

                <div class="form-container form-container-2">


                     <div class="form-control form-control-product">
                        <form asp-action="Create" enctype="multipart/form-data" id="form_id">

                            <div class="form-fields">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                            
                                <input asp-for="Name" class="form-edit" placeholder="Product name ..."/>
                                <span asp-validation-for="Name" class="text-danger"></span>

                            
                                <input asp-for="Price" class="form-edit" placeholder="Product price ...">
                                <span asp-validation-for="Price" class="text-danger"></span>

                                
                                <textarea asp-for="Description" class="form_teksti creati" placeholder="Product description ..."></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            
                                <input asp-for="AgeCategory" class="form-edit" placeholder="Product age category ..."/>
                                <span asp-validation-for="AgeCategory" class="text-danger"></span>

                            
                                <input asp-for="Rating" class="form-edit" placeholder="Product rating ..."/>
                                <span asp-validation-for="Rating" class="text-danger"></span>

                                <br />
                                <br />

                                <select asp-for="CategoryId" class ="form-edit" asp-items="ViewBag.CategoryId"></select>

                                <br />
                                <br />

                                <select asp-for="ProductCategoryId" class ="form-edit" asp-items="ViewBag.ProductCategoryId"></select>



                                 <input type="submit" value="Create" class="btn btn-primary" onclick="test(); return false;"/>

                                 <a asp-action="Index">Back to List</a>
                            </div>

                             <div class="Image">
                                <img src="/Images/Products/" id="output"/>
                                <input asp-for="ImageFile" class="form-edit" accept="image/*" onchange="loadFile(event)"  id="file" required/>
                                <label id="label" for="file">Upload product photo <i class="fa-solid fa-image"></i></label>
                                <span asp-validation-for="ImageFile" class="text-danger"></span>
                                <input asp-for="Exclusive" class="checkBox"/>
                                <p>Exclusive?</p>
                            </div>

                        </form>

                     </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script  src="~/js/ProductImageLoad.js"></script>
}
