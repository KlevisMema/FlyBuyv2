@model FlyBuy.Models.Rating

@{
    ViewData["Title"] = "Create";
}

<div class="account-page account-page-2">
    <div class="container">
        <div class="row">
            <div class="col-2">

                <div class="form-container form-review">

                    <div class="form-btn">
                        <span>Give a review to Fly Buy </span>
                    </div>

                    <form asp-action="Create">

                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-control">
                            <div class="form-group">
                                @*<label asp-for="Description" class="control-label"></label>*@
                                <input asp-for="Description" class="form_teksti" />
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Rate" class="control-label"></label>
                                <div id="rateYo"></div>
                                <input asp-for="Rate" class="form-edit" type="hidden" id="rating"/>
                                <span asp-validation-for="Rate" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Name" class="control-label"></label>
                                <input asp-for="Name" class="form-edit" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <div class="my-rating"></div>
                                <input type="submit" value="Create" class="btn btn-primary" />
                            </div>
                        </div>

                    </form>

                </div>

            </div>
        </div>
    </div>
</div>


<div>
    <a asp-action="Index">Back to List</a>
</div>



@section Scripts {

    <script>

        $(function () {
 
            $("#rateYo").rateYo({
            rating: 0,
            ratedFill: "#ff523b",
            maxValue: 5,
            numStars: 5,
            starWidth: "30px",
            halfStar: true,
            spacing: "3px",
            onChange:function (rating , rateYoInstance) {
                $('#rating').val(rating);
                console.log(rating);
            }
          
            });
 
        });

    </script>

    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
   
}