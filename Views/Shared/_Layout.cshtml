<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FlyBuy</title>
   @* <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />*@
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    @*<link rel="stylesheet" href="~/FlyBuy.styles.css" asp-append-version="true" />*@
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

    <script src="https://cdn.jsdelivr.net/npm/typed.js@2.0.12"></script>
    
</head>
<body>
    
    <div  class="free-delivery">
        <h2>FREE DELIVERY in AL on all orders over €60 & FREE worldwide over €275</h2>
    </div>

     <div class="backgroundHeader">

        <div class="GeneralHeader">

            <div class="navbar navbarV2">

                <a asp-controller="Home" asp-action="Index"><h1 id="z-index" class="logo color-logo">FLY<span>  BUY</span></h1></a> 

                <div class="menus">
                    <div class="dropdown">
                        <a class="dropbtn"><p>WOMENS</p><i class="fa-solid fa-chevron-right"></i></a>
                        <div class="dropdown-content">
                            <a>HOODIES</a>
                            <a>JOGGERS</a>
                            <a>SHORTS</a>
                            <a>T-SHIRTS</a>
                            <a>VEST TOPS</a>
                            <a>SWIMWEAR</a>
                            <a>ACCESSORIES</a>
                        </div>
                    </div>

                    <div class="dropdown">
                        <a class="dropbtn"><p>MENS</p><i class="fa-solid fa-chevron-right"></i></a>
                        <div class="dropdown-content">
                            <a>HOODIES</a>
                            <a>JOGGERS</a>
                            <a>SHORTS</a>
                            <a>T-SHIRTS</a>
                            <a>VEST TOPS</a>
                            <a>SWIMWEAR</a>
                            <a>ACCESSORIES</a>
                        </div>
                    </div>

                    <div class="dropdown">
                        <a class="dropbtn"><p>KIDS</p><i class="fa-solid fa-chevron-right"></i></a>
                        <div class="dropdown-content">
                            <a>HOODIES</a>
                            <a>JOGGERS</a>
                            <a>SHORTS</a>
                            <a>T-SHIRTS</a>
                            <a>VEST TOPS</a>
                            <a>SWIMWEAR</a>
                            <a>ACCESSORIES</a>
                        </div>
                    </div>

                    <div class="dropdown">
                        <a class="dropbtn"><p>ACCESSORIES</p><i class="fa-solid fa-chevron-right"></i></a>
                        <div class="dropdown-content">
                            <a>BAGS</a>
                            <a>CAPS</a>
                            <a>SOCKS</a>
                            <a>WATCH</a>
                            <a>GLASSES</a>
                        </div>
                    </div>

                    <div class="dropdown">
                        <a class="dropbtn"><p>ABOUT</p><i class="fa-solid fa-chevron-right"></i></a>
                        <div class="dropdown-content">
                            <a>THE PURPOSE</a>
                            <a>ABOUT FLYBUY</a>
                        </div>
                    </div>

                </div>



                <nav>

                    <ul id="MenuItems2">
                        @*<li><input type="text" placeholder="Search" class="input-box" id="search-bar"></li>*@
                        @if (User.IsInRole("Admin"))
                        {
                            <li>@Html.ActionLink("Age Categories", "Index", "AgeCategories")</li>
                            <li>@Html.ActionLink("Categories", "Index", "Categories")</li>
                            <li>@Html.ActionLink("Contact", "Index", "ContactUs")</li>
                            <li>@Html.ActionLink("Orders", "Index", "Orders")</li>
                            <li>@Html.ActionLink("Ratings", "Index", "Ratings")</li>
                            <li>@Html.ActionLink("Products", "Index", "Products")</li>
                            <li>@Html.ActionLink("Home", "NewHomePage", "Home")</li>
                            <li>@Html.ActionLink("All Products", "AllProducts", "Products")</li>
                            <li>@Html.ActionLink("Log Off", "FirstPage", "Home")</li>
                        }
                        else if (User.IsInRole("User"))
                        {
                            <li>@Html.ActionLink("Home", "NewHomePage", "Home")</li>
                            <li>@Html.ActionLink("All Products", "AllProducts", "Products")</li>
                            <li>@Html.ActionLink("Log Off", "FirstPage", "Home")</li>
                            <li>@Html.ActionLink("Rate Our Page", "Create", "Ratings")</li>
                        }

                        @if (User.IsInRole("Users"))
                        {
                            <li>@Html.ActionLink("Rate Page", "Create", "Ratings")</li>
                            <li class="small-screen-hide"><span>|</span></li>
                            <li><i class="fa fa-user" @*title="@System.Web.HttpContext.Current.User.Identity.Name"*@></i></li>
                            <li> <a href="/ShoppingCart/Index"><i class="fas fa-shopping-cart" title="Shopping cart"></i> </a> </li>
                            <li class="small-screen-hide"><i id="night" class="far fa-moon nightV2" title="Night"></i></li>
                            <li class="small-screen-hide"><i id="day" class="fas fa-sun dayV2" title="Day"></i></li>
                            @*<li class="small-screen-hide"><i class="fa fa-search" title="Search" id="search"></i></li>*@
                        }

                        <li class="dropdown">
                            <a class="dropbtn"><i class="fa-solid fa-user"></i></a>
                            <div class="dropdown-content">
                                @if (User.Identity.IsAuthenticated)
                                {
                                    <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                                        <button type="submit">LOG OFF</button>
                                    </form>
                                    <a asp-area="Identity" asp-page="/Account/Manage/Email" >PROFILE</a>
                                }
                                else
                                {
                                    <a asp-area="Identity" asp-page="/Account/Login">LOGIN</a>
                                    <a asp-area="Identity" asp-page="/Account/Register">REGISTER</a>
                                }
                                
                            </div>
                        </li>
                        <li><a><i class="fa-solid fa-heart"></i></a></li>
                        <li><a><i class="fa-solid fa-bag-shopping"></i></a></li>
                        
                    </ul>

                </nav>

                <img src="~/Images/NavBarMobile/Close.png" class="menu-icon" id="O" onclick="MenuToggle()">
                <img src="~/Images/NavBarMobile/Open.png" class="menu-icon_2" id="X">
            </div>
            <!--Fund Shiriti Navigimit-->
        </div>
    </div>
    
    @RenderBody()

    <!--footer-->
    <div class="footer">
        <div class="container">
            <hr id="line">
            <div class="row">
                <div class="footer-col-1">
                    <h3>Download Our App</h3>
                    <p>Download App for Android and ios mobile phone. </p>
                    <div class="app-logo">
                        <img src="~/Images/Footer/app-store.png">
                        <img src="~/Images/Footer/play-store.png">
                    </div>
                </div>
                <div class="footer-col-2">
                    <h1 class="logo">FLY <span>BUY</span></h1>
                    <p>Our Purpose Is To Sustainably Make Pleasure and Benefits of Sports Accessible to the Many.</p>
                </div>
                <div class="footer-col-3">
                    <h3>Follow Us</h3>
                    <ul>
                        <li><a href="#">Facebook</a></li>
                        <li><a href="#">Twitter</a></li>
                        <li><a href="#">Instagram</a></li>
                        <li><a href="#">YouTube</a></li>
                    </ul>
                </div>
            </div>
            <hr id="lineV2">
            <p class="copyright">Copyright 2022</p>
        </div>
    </div>
     

   
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script src="~/js/CaptchaValidation.js"></script>
    <script src="~/js/Typed.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.js" integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk=" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js" integrity="sha512-894YE6QWD5I59HgZOGReFYm4dnWc1Qt5NtvYSaNcOP+u1T9qYdvdihz0PPSiiqn/+/3e7Jo4EaG7TubfWGUrMQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>






















