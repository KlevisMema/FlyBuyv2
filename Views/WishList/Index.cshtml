@model IEnumerable<FlyBuy.Models.Product>
@{
    ViewData["Title"] = "Index";
}


@if(Model.Count() > 0)
{
    <div class="backgound" id="background">

        <div class="small-container small-container-homePage">
            <h2 class="title">Products That You Liked</h2>
           
            <div class="row">
                
                @foreach (var item in Model)
                {
                    <div class="col-4">
                        <a asp-action="ProductDetail" asp-controller="Home" asp-route-id="@item.Id"><img src="/Images/Products/@item.Image"></a>
                        <h4>@item.Name</h4>
                        <div class="rating">  
                            @for (int i = 0; i < item.Rating; i++)
                            {
                                <i class="fa fa-star"></i>
                            }
                        </div>
                        <p>@item.Price.ToString("C2")</p>
                        <br />
                        <a asp-action="Add" asp-controller="Cart" asp-route-id="@item.Id">Add to cart</a>
                        <a asp-action="Remove" asp-controller="WishList" asp-route-id="@item.Id">Remove from wish list </a>
                    </div>    
                }

            </div>
        </div>
    </div>
}
else
{
    <div class="account-page">
        <div class="container">
            <div class="row">
                <div class="col-2">

                    <div class="form-container form-container-2">

                        <div class="form-btn">
                            <h2>Your wish list is empty </h2>
                        </div>

                        <div class="form-control form-control-2">
                            @Html.ActionLink("Go Back Shopping", "Index", "Home", new { @class = "" }, null)
                        </div>
