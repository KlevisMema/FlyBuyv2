@model FlyBuy.Models.CartViewModel

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jquery-modal/0.9.1/jquery.modal.min.css" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@9.17.2/dist/sweetalert2.min.css" />

@if (Model.CartItems.Count > 0)
{
    <div class="small-container cart-page">
        <table>
            <tr>
                <th>Product</th>
                <th>Quantity</th>
                <th>Subtotal</th>
                
            </tr>
            @foreach (var item in Model.CartItems)
            {
                <tr>
                    <td>
                        <div class="cart-info">
                            <img src="~/Images/Products/@item.Image">
                            <div class="cart">
                                <p>@item.ProductName</p>
                                <small>Price : @item.Price.ToString("C2")</small>
                                <br>
                                <div class="cartOptions">
                                    <a asp-action="Add" asp-route-id="@item.ProductId"><i class="fa-solid fa-plus"></i></a>
                                    <a asp-action="Decrease" asp-route-id="@item.ProductId"><i class="fa-solid fa-minus"></i></a>
                                    <a asp-action="Remove" asp-route-id="@item.ProductId"><i class="fa-solid fa-xmark"></i></a>
                                </div>
                            </div>
                        </div>
                    </td>
                
                    <td>@item.Quantity</td>
                    <td>@Model.CartItems.Where(x => x.ProductId == item.ProductId).Sum(x => x.Quantity * x.Price).ToString("C2")</td>
                </tr>
            }
        </table>

        <div class="total-price">
            <table>
                <tr>
                    <td>Grand Total: @Model.GrandTotal.ToString("C2")</td>

                </tr>

                <tr>

                    <td><a asp-action="ProccedToCheckout" asp-controller="Cart">Procced To Checkout</a></td>
                    <td><a asp-action="Clear" class="">Clear Cart</a></td>

                </tr>
                <tr>
                                
                </tr>
                @*<tr>
                    <td><a href="#" class="">Checkout</a></td>
                </tr>*@
            </table>
        </div>
    </div>
}
else
{
    <div class="account-page">
        <div class="container">
            <div class="row">
                <div class="col-2">

                    <div class="form-container form-container-2">

                        <div class="form-btn">
                            <h2>Your cart is empty </h2>
                        </div>

                        <div class="form-control form-control-2">
                            @Html.ActionLink("Go Back Shopping", "Index", "Home", new { @class = "" }, null)
                        </div>
