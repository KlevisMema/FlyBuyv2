@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}


<form id="account" method="post">
                
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="account-page">
        <div class="container">
            <div class="row">
                <div class="col-2">

                    <div class="form-container form-login">
                                
                        <div class="form-btn">
                            <span>@ViewBag.Title  to your account</span>
                        </div>

                        <div class="form-control  form-control-2">

                            <div class="from-group2">
                                <label asp-for="Input.Email"></label>
                                <input asp-for="Input.Email" class="form-edit" autocomplete="username" aria-required="true" placeholder="Email..."/>
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>

                            <div class="form-group2">
                                <label asp-for="Input.Password" class=""></label>
                                <input asp-for="Input.Password" class="form-edit" autocomplete="current-password" aria-required="true" placeholder="Password..." />     
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>

                            <div class="form-group2">
                                <button id="login-submit" type="submit" class="btn">Log in</button>
                            </div>
                            
                        </div>

                    </div>

                </div>
            </div>
        </div>
    </div>
                
</form>
       





